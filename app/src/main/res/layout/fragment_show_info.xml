<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editTextFullNameShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/editTextUsernameShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextEmailShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPasswordShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextGenderShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="24dp"
            android:inputType="textPersonName"
            android:background="@drawable/shape" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Save"
            android:backgroundTint="#FF2DD2"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="520dp" />

    </LinearLayout>
    </ScrollView>



</FrameLayout>